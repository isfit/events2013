<div class="span12">
  <%= simple_form_for(@event, url: admin_event_dates_path) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :datetime, :input_html => {class: "span2"} %>
      <%= f.input :event_id, collection: @events, as: :select, :input_html => { class: "span6" } %>
      <%= f.input :url, :input_html => { class: "span6" } %>
      <%= f.input :sold_out, as: :boolean, :input_html => { class: "span6" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>

  <% end %>
</div>
